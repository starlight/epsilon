CSC_FLAGS = -X r7rs -R r7rs
rule csc
  command = csc $CSC_FLAGS -o $out $in

build epsilon: csc src/epsilon.scm epsilon.base.o
  CSC_FLAGS = $CSC_FLAGS -uses base

build run-tests: csc tests/run.scm epsilon.base.o
  CSC_FLAGS = $CSC_FLAGS -uses base

build epsilon.base.o: csc src/base.scm
  CSC_FLAGS = $CSC_FLAGS -cJ -unit base

default epsilon run-tests
